<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="$(FodyVersion)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\InlineIL\InlineIL.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <WeaverTargetFramework Condition="$(MSBuildRuntimeType) != 'Core'">net46</WeaverTargetFramework>
    <WeaverTargetFramework Condition="$(MSBuildRuntimeType) == 'Core'">netstandard2.0</WeaverTargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <WeaverFiles Include="..\Weavers\bin\$(Configuration)\$(WeaverTargetFramework)\Weavers.dll" WeaverClassNames="InlineILInSolution" />
  </ItemGroup>

</Project>
